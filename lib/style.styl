@import 'nib'
@import 'normalize'

// Colores
gris_A = #E6E6E6;
gris_B = #808080;

// Mixins
line(color)
	outline-offset color 1px dashed
	
textOverflow()
	text-overflow ellipsis
	white-space nowrap
	overflow hidden

// Tags Personalizados
body
	font-size 16px
	
figure
	margin 0
	padding 0
	
// Clases Utilitarias
.u-block
	display block
.u-inlineBlock
	display inline-block
.u-flex
	display flex
.backImage
	background url('../images/bg.png')
.backColor
	background url() black

	
.contenedor
	margin-left auto
	margin-right auto
	width 1024px
	overflow visible
	
// Encabezado
@import './encabezado/style.styl'
			

.cuerpo
	line(white)
	display flex
	flex-flow column wrap
	align-content space-between
	margin-top .5rem
	width 100%
	height 630px
	
	
