.encabezado
	height 5rem
	&-title
		textOverflow()
		
		color white
		font-size 3.75rem
		padding .45rem 0 0 .5rem
		text-shadow 0px 1px 1px  lightness(black, 30)
		vertical-align top
		width 83%

	&-clima		
		padding .45rem 0 0
		vertical-align top
		width 15%
		text-align right
		

.clima
	&-image
		margin-right 2rem
		vertical-align top
		img
			width 4rem
		
	&-content
		vertical-align top
		
	&--temp
		color white
		font-size 1.7rem
		text-align right